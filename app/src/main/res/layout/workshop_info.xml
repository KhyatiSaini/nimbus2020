<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardWorkshop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:id="@+id/contWor">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/WorkshopImageID"
                android:layout_width="90dp"
                android:layout_height="90dp"


                />

            <TextView
                android:id="@+id/workshopNameID"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/WorkshopImageID"
                android:paddingLeft="5dp"
                android:text="Workshop Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/WorkshopDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workshopNameID"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/WorkshopImageID"
                android:padding="5dp"
                android:text="Dated"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/workshopVenueID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/WorkshopDate"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/WorkshopImageID"
                android:padding="5dp"
                android:text="Venue"
                android:textSize="17sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>