<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardExhibition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="@dimen/cardRadius"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:id="@+id/contExh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background">

            <ImageView
                android:id="@+id/round_big"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:elevation="0dp"
                android:src="@drawable/bg_round_dark"
                android:translationX="-75dp" />

            <ImageView
                android:id="@+id/round_small"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bg_round_dark"
                android:tint="@color/black"
                android:translationX="-50dp" />

            <ImageView
                android:id="@+id/exhibitionImageID"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/round_outline"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <TextView
                android:id="@+id/exhibtionNameID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:fontFamily="psb"
                android:paddingLeft="5dp"
                android:text="Exhibition Name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ExhibitionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/exhibtionNameID"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/psregular"
                android:padding="5dp"
                android:text="Dated"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/exhibitionVenueID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ExhibitionDate"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/psregular"
                android:padding="5dp"
                android:text="Venue"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>