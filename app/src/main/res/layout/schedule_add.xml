<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTalk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031">

        <RelativeLayout
            android:id="@+id/contSch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/EventSchNameID"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Event Name"

                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EventSchDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EventSchNameID"
                android:padding="5dp"
                android:text="Dated"

                android:textSize="17sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/EventSchVenueID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EventSchDate"
                android:padding="5dp"
                android:text="Venue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EventDepVenueID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EventSchVenueID"
                android:padding="5dp"
                android:text="Department Name"
                android:textSize="17sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>