<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3180F0FF"
    tools:context=".Activities.Add_deptEvents_detail">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDetEventsD"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/ImgDetEventsD"
                android:layout_width="340dp"
                android:layout_height="223dp"
                android:layout_centerHorizontal="true"
                android:background="#000000"
                android:backgroundTint="#000000"
                android:scaleType="fitXY"
                android:src="@drawable/fui_ic_anonymous_white_24dp" />

            <TextView
                android:id="@+id/NameIDDetEventsD"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@+id/ImgDetEventsD"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"

                android:text="Event Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DateDetEventsD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NameIDDetEventsD"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Dated"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/VenueIDDetEventsD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DateDetEventsD"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Venue"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/InfoIDDetEventsD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/VenueIDDetEventsD"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Info"
                android:textSize="17sp"

                />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewDetEventsD"
        app:layout_constraintVertical_bias="0.774"
        tools:layout_editor_absoluteX="0dp">


        <Button
            android:id="@+id/abstractDEventsDet"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:background="@drawable/dat"
            android:backgroundTint="#8A29B6FC"
            android:padding="5dp"
            android:text="Abstract"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/registerDetEventsD"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"

            android:background="@drawable/dat"
            android:backgroundTint="#8A29B6FC"
            android:padding="5dp"
            android:text="Register"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>