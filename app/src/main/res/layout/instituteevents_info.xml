<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardIEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="@dimen/cardRadius"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:id="@+id/IcontInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background">

            <ImageView
                android:id="@+id/round_big"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:elevation="0dp"
                android:src="@drawable/bg_round_dark"
                android:translationX="-75dp" />

            <ImageView
                android:id="@+id/round_small"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bg_round_dark"
                android:tint="@color/black"
                android:translationX="-50dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/EventIImageID"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:src="@color/white"
                android:visibility="gone" />


            <TextView
                android:id="@+id/EventINameID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/psb"
                android:paddingRight="8dp"
                android:text="Event Name"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/EventIDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EventINameID"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/psregular"
                android:paddingRight="8dp"
                android:text="Dated"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/EventIVenueID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EventIDate"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/psregular"
                android:paddingRight="8dp"
                android:text="Venue"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>